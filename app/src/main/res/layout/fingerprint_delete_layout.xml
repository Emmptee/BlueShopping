<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@color/chengxing_color"

    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:background="#000000"
        android:layout_marginLeft="59.5dp"
        android:layout_marginRight="59.5dp"
        android:layout_marginTop="38dp"
        >

        <TextView
            android:id="@+id/title_back"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_marginLeft="29dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/title_back_padding_left"
            android:textColor="#ffffff"
            android:textSize="19.0sp" />

        <TextView
            android:layout_width="75dp"
            android:layout_height="44dp"
            android:layout_marginLeft="29dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:background="@drawable/title_back_background"
            android:paddingLeft="@dimen/title_back_padding_left"
            />
        <com.sdf.blueshopping.widget.ClearEditText
            android:id="@+id/fingerprint_item_rename"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="48.5dp"
            android:paddingRight="24dp"
            android:background="#c0000000"
            android:textCursorDrawable="@drawable/color_cursor"
            android:maxLines="1"
            android:maxLength="3"
            android:textSize="19sp"
            android:textColor="@color/chengxing_color"
            android:imeOptions="actionDone"
            android:layout_alignTop="@+id/title_back"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/title_back" />

        <View
            android:id="@+id/fingerprint_divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="29dp"
            android:layout_marginRight="29dp"
            android:layout_alignParentBottom="true"
            android:background="@color/divider_vertical_color" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="#000000"
        android:layout_marginLeft="59.5dp"
        android:layout_marginRight="59.5dp">

        <TextView
            android:id="@+id/fingerprint_delete"
            android:layout_width="72.5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="29dp"
            android:layout_marginTop="13dp"
            android:text="删除指纹"
            android:textColor="@color/chengxing_color"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>