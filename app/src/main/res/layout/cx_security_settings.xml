<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#cc000000">

    <include layout="@layout/title_back"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginRight="10dp">

                <RadioGroup
                    android:id="@+id/rd_lock_passwd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/lock_pattern_passwd"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:button="@drawable/radio_selector"
                        android:paddingLeft="15dp"
                        android:text="@string/lock_pattern_passwd"
                        android:textSize="19sp" />

                    <RadioButton
                        android:id="@+id/lock_number_passwd"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:button="@drawable/radio_selector"
                        android:paddingLeft="15dp"
                        android:text="@string/lock_number_passwd"
                        android:textSize="19sp" />
                </RadioGroup>

                <TextView
                    android:id="@+id/change_pattern_passwd"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/dashboard_tile_background"
                    android:gravity="center"
                    android:text="@string/security_change_passwd"
                    android:textColor="@color/chengxing_color"
                    android:textSize="19sp"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/change_number_passwd"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dashboard_tile_background"
                    android:gravity="center"
                    android:text="@string/security_change_passwd"
                    android:textColor="@color/chengxing_color"
                    android:textSize="19sp"
                    android:visibility="invisible" />
            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/fingerprint_lock_title"
                    android:textColor="#ffffff"
                    android:textSize="19sp" />
                <TextView
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/dashboard_tile_background"
                    android:gravity="center"
                    android:text="@string/add_fingerprint"
                    android:textColor="@color/chengxing_color"
                    android:textSize="19sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fp_already_enroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical"
                >
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center|left"
                android:text="@string/usage_fingerptint"
                android:textColor="#ffffff"
                android:textSize="19sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/access_control_card_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="40dp"
                    android:text="@string/access_contrl_fingerprint"
                    android:textColor="#ffffff"
                    android:textSize="19sp" />

                <ToggleButton
                    android:id="@+id/access_control_card_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/mode_switch"
                    android:text="@string/mode_switch_text"
                    android:textOff="@string/mode_switch_text"
                    android:textOn="@string/mode_switch_text" />
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_card_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left|center"
                android:layout_marginLeft="40dp"
                android:text="@string/id_fingerprint"
                android:textColor="#ffffff"
                android:textSize="19sp" />

            <ToggleButton
                android:id="@+id/id_card_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/mode_switch"
                android:text="@string/mode_switch_text"
                android:textOff="@string/mode_switch_text"
                android:textOn="@string/mode_switch_text" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/entry_usage_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:layout_marginLeft="40dp"
                    android:text="@string/entry_usage_fingerprint"
                    android:textColor="#ffffff"
                    android:textSize="19sp" />

                <ToggleButton
                    android:id="@+id/entry_usage_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/mode_switch"
                    android:text="@string/mode_switch_text"
                    android:textOff="@string/mode_switch_text"
                    android:textOn="@string/mode_switch_text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="@string/security_protect"
                    android:textColor="#ffffff"
                    android:textSize="19sp" />

                <ToggleButton
                    android:id="@+id/safe_protect"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@android:color/transparent"
                    android:drawableRight="@drawable/mode_switch"
                    android:text="@string/mode_switch_text"
                    android:textOff="@string/mode_switch_text"
                    android:textOn="@string/mode_switch_text" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.2"
                android:text="@string/security_time_note"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>
